@page
@model Ejercicio3_Prestamo_Y_Cajero.Pages.PrestamoModel
@{
}


<html>
<head>
    <title>Prestamo DFG</title>
</head>
<body>
    <h3 class="text text-center">Calculadora de prestamos</h3>
    <hr />
    <form method="get">
        <div class="form-group form-inline form-row">
            <label for="monto" class="form-text col-form-label">Monto</label>
            <input id="monto" type="number" class="form-control" name="monto" />
        </div>
        <div class="form-group form-inline form-row">
            <label class="form-text col-form-label" for="cuotas">Cantidad de cuotas</label>
            <input type="number" name="cuotas" class="form-control" id="cuotas" />
        </div>
        <div class="form-group form-inline form-row">
            <label class="form-text col-form-label" for="interes">Interes anual</label>
            <input type="number" name="interes" id="interes" class="form-control" />
        </div>
        <input type="submit" value="Enviar" class="btn btn-success" />
    </form>
    <h3> @Model.mensaje</h3>


</body>
</html>